  <section class="detail-media" aria-labelledby="detail-media-title">
    <h2 id="detail-media-title" class="sr-only">Explora el venue</h2>
    <div class="detail-media__layout">
      <div class="detail-media__gallery" data-detail-gallery>
        <div class="gallery-viewer">
          <button
            class="gallery-viewer__control gallery-viewer__control--prev"
            type="button"
            aria-label="Ver foto anterior"
            data-gallery-prev
          >
            <svg
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="m15 6-6 6 6 6" />
            </svg>
          </button>
          <figure class="gallery-viewer__media" data-gallery-main>
            <img
              src="/{{ directory }}/images/maloka.jpg"
              alt="Vista exterior del domo"
              loading="lazy"
              data-gallery-image
            />
            <figcaption data-gallery-caption>
              La Sala Digital cuenta con tecnolog&iacute;a de vanguardia y
              sonido envolvente.
            </figcaption>
          </figure>
          <button
            class="gallery-viewer__control gallery-viewer__control--next"
            type="button"
            aria-label="Ver foto siguiente"
            data-gallery-next
          >
            <svg
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="m9 6 6 6-6 6" />
            </svg>
          </button>
          <button class="gallery-viewer__badge" type="button">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="size-6"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99"
              />
            </svg>
            <span>Vista 360</span>
          </button>
        </div>
        <div class="gallery-thumbs" data-gallery-thumbs>
          {% if node.field_picgallery is not empty %}
          <div class="gallery">
            {% for media_item in node.field_picgallery %} {% set image =
            media_item.entity.field_media_image.0 %}
            {{ dump(image) }}
            <img
              src="{{ file_url(image.entity.fileuri) }}"
              alt="{{ image.alt }}"
            />
            {% endfor %}
          </div>
          {% endif %}

          <button
            class="gallery-thumbs__item is-active"
            type="button"
            data-gallery-thumb
            data-image="/{{ directory }}/images/maloka.jpg"
            data-caption="La Sala Digital cuenta con tecnolog&iacute;a de vanguardia y sonido envolvente."
            data-alt="Vista exterior del domo principal"
          >
            <span class="gallery-thumbs__media">
              <img
                src="/{{ directory }}/images/maloka.jpg"
                alt="Vista exterior del domo principal"
                loading="lazy"
              />
            </span>
            <span class="gallery-thumbs__label">Domo</span>
          </button>
        </div>
      </div>
