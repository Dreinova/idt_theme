<header class="hero hero--landing">
  <div class="hero__bg" aria-hidden="true">
    <div class="hero__bg-image"></div>
  </div>
  <div class="hero__overlay">
    <div class="top-nav">
      <button
        class="top-nav__toggle"
        type="button"
        aria-label="Abrir menú principal"
        aria-controls="mobile-quick-nav"
        aria-expanded="false"
      >
        <span class="top-nav__toggle-bars" aria-hidden="true"></span>
        <span class="sr-only top-nav__toggle-text">Abrir menú principal</span>
      </button>
      {{ menus['main__mobile'] }}   {# versión mobile #}


      <a class="brand" href="/src/index.html" aria-label="Visit Bogotá Conecta">
        <img src="/{{ directory }}/images/conecta_logo.png" alt="Logo" />
      </a>

      {{ menus.main }}
      <form class="top-nav__controls" aria-label="Preferencias de navegación">
        <label class="pill pill--light pill--select">
          <span class="pill__label">Stopover</span>
          <select name="stopover" aria-label="Seleccionar tipo de experiencia">
            <option value="stopover">Stopover</option>
            <option value="experiencias">Experiencias</option>
            <option value="paquetes">Paquetes</option>
          </select>
          <span class="pill__icon" aria-hidden="true">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
              aria-hidden="true"
            >
              <path
                fill-rule="evenodd"
                d="M12.53 16.28a.75.75 0 0 1-1.06 0l-7.5-7.5a.75.75 0 0 1 1.06-1.06L12 14.69l6.97-6.97a.75.75 0 1 1 1.06 1.06l-7.5 7.5Z"
                clip-rule="evenodd"
              />
            </svg>
          </span>
        </label>

        <label class="pill pill--light pill--flag pill--select">
          <span class="pill__flag fi fi-gb" aria-hidden="true"></span>
          <span class="pill__label sr-only">Idioma</span>
          <select name="language" aria-label="Seleccionar idioma">
            <option value="en">EN</option>
            <option value="es">ES</option>
          </select>
          <span class="pill__value" aria-hidden="true">EN</span>
          <span class="pill__icon" aria-hidden="true">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
              aria-hidden="true"
            >
              <path
                fill-rule="evenodd"
                d="M12.53 16.28a.75.75 0 0 1-1.06 0l-7.5-7.5a.75.75 0 0 1 1.06-1.06L12 14.69l6.97-6.97a.75.75 0 1 1 1.06 1.06l-7.5 7.5Z"
                clip-rule="evenodd"
              />
            </svg>
          </span>
        </label>
      </form>
    </div>

    <div class="hero__content">
      <img src="/{{ directory }}/images/conecta_logo.png" alt="Logo" />
      <h1 class="hero__title">Conexiones que suman valor</h1>
    </div>
  </div>
</header>
